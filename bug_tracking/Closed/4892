This file creates a stack overflow:

.inputs Y X
.dummy t1 t3 t5 t4 t2
#@.variables Z W
#|.places p3 p1 p2
#@.init_state [00]
.graph
t1 p2
p1 t1
t3 p2
p1 t3
t5 p3
p3 t5
t4 p1
p2 t4
t2 p2
p1 t2
.marking {p3 p1 }
#@.init_vals {<Z=0><W=[1,1]>}
#@.enablings {<t1=[X&Y]><t3=[~X&Y&(W>=0)]><t5=[Z=0]><t2=[X&~Y]>}
#@.assignments {<t1=[Z:=1]><t3=[Z:=3]><t4=[Z:=0]><t2=[W:=3]><t2=[Z:=2]>}
#@.delay_assignments  
{<t1=[1,1]><t3=[1,1]><t5=[2,2]><t4=[0,0]><t2=[1,1]>}
#@.boolean_assignments {<t4=[X:=false]><t5=[X:=true]>}
.end

