In the example below the initial rate assignment clobbers the initial marking.

.outputs inc 
.dummy d_6P1 d_5P1 d_3P1 d_4P1 
#@.variables y
#@.init_state [1]
.graph
inc+/1 ip0
ip0 d_5P1#@ [0,0]
inc-/1 ip1
ip1 d_6P1#@ [0,0]
d_6P1 ip5
ip5 inc+/1#@ [1,2]
d_5P1 ip4
ip4 inc-/1#@ [1,2]
d_3P1 ip2
ip2 d_4P1#@ <~(inc)>[0,0]
d_4P1 ip3
ip3 d_3P1#@ <inc>[0,0]
.marking { ip0 ip2 }
#@.init_vals {<y=2>}
#@.init_rates {<y=1>}
#@.enablings {<d_6P1=[y<5]><d_5P1=[y>=10]>}
#@.rate_assignments {<d_3P1=[y:=1]><d_4P1=[y:=-2]>}
#@.continuous y
.end

